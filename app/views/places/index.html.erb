<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Location</th>
      <th>Schedule</th>
      <th>Description</th>
      <th>Mood_id</th>
      <th>Category_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>



      <tr>
        <td><%= place.name %></td>
        <td><%= image_tag(place.image, class:"img-responsive") if place.image.present? %></td>
        <td><%= place.location %></td>
        <td><%= place.schedule %></td>
        <td><%= place.description %></td>
        <td><%= place.mood.name %></td>
        <td><%= place.category.name %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New place', new_place_path %>
