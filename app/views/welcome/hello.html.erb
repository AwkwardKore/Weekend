<div class="row">
  <div class="jumbotron col-md-offset-3 col-md-6">
    <h1 style="text-align:center">Weekend</h1>
    <h4 class="col-md-offset-3" style="color: black;">Pregunta, busca, decide, encuentra.</h3>

    <div class="" style="text-align:center">
      <%= link_to 'Inicia sesión', login_path, :class => "btn btn-material-indigo" %>
      <br>
      <p style="text-align:right">O registrate <%= link_to 'aqui' , new_user_path %></p>
    </div>
  </div>
  <div class="col-md-3">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= message %>
      </div>
    <% end %>
  </div>
</div>
