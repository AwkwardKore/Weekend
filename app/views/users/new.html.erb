<div class="row">
  <h1 class="col-md-6 col-md-offset-3" style="color: white;">Registro</h1>
</div>

<div class="row">
  <div class="jumbotron col-md-6 col-md-offset-3">

    <% flash.each do |message_type, message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>

    <%= form_for(@user) do |f| %>
    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.text_field :name , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Nombre" %>
        <label tabIndex="-1">Nombre</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.text_field :user , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Usuario" %>
        <label>Usuario</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.password_field :password , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Contraseña" %>
        <label>Contraseña</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.password_field :password_confirmation , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Confirmación de contraseña" %>
        <label>Confirmación de contraseña</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
      <%= f.text_field :mail, class: "form-control", autocomplete: "off",
      pattern: ".+", "required placeholder": "Correo Electrónico"%>
      <label>Correo Electrónico</label>
      </div>
    </div>

    <div class="actions text-center">
      <%= f.submit :class => "btn btn-success"%>
    </div>

    <% end %>
  </div>
</div>
