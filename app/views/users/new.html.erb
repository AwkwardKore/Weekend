
<div class="row">
  <h1 class="col-md-6 col-md-offset-3">New User</h1>
</div>

<div class="row">
  <div class="jumbotron col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>


    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.text_field :name , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Name" %>
        <label tabIndex="-1">Name</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.text_field :user , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Username" %>
        <label>Username</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.password_field :password , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Password" %>
        <label>Password</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
        <%= f.password_field :password_confirmation , class: "form-control", autocomplete: "off",
        pattern: ".+", "required placeholder": "Password Confirmation" %>
        <label>Password</label>
      </div>
    </div>

    <div class="field form-group">
      <div class="form-control-wrapper">
      <%= f.text_field :mail, class: "form-control", autocomplete: "off",
      pattern: ".+", "required placeholder": "Email"%>
      <label>Email</label>
      </div>
    </div>

    <div class="actions text-center">
      <%= f.submit :class => "btn btn-success"%>
    </div>

    <% end %>
  </div>
</div>
